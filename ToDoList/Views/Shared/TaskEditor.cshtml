@model UserTask

@{
    List<SelectListItem> users = new List<SelectListItem>()
{
        new SelectListItem("No Author", "0"),
        new SelectListItem("Krystian Nowak", "1"),
        new SelectListItem("Maciej Kowalski", "2"),
        new SelectListItem("Zbigniew Czajka", "3"),
    };
}


<h4>@Model.Name</h4>
<hr />
<form asp-area="" 
      asp-controller="Home" 
      asp-action="SaveTask" 
      asp-route-isNew="@ViewData["IsNew"]" 
      asp-route-groupId="@ViewData["groupId"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" hidden="hidden">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User" class="control-label"></label>
        <select asp-for="User" asp-items="users" class="form-control"></select>
        <span asp-validation-for="User" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status"
                asp-items="Html.GetEnumSelectList<ToDoList.Models.TaskStatus>()"
                class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" 
               value="@(!(bool)ViewData["IsNew"] ? "Save" : "Add")" 
               class="btn btn-primary" />
    </div>
</form>

